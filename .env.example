# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=true
API_RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/maersk_db
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Local LLM Configuration
LOCAL_LLM_MODEL_PATH=models/llm
LOCAL_LLM_MAX_TOKENS=2000
LOCAL_LLM_TEMPERATURE=0.7

# SendGrid Configuration (for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@maersk.com

# JWT Configuration
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ML Model Configuration
MODEL_RETRAIN_INTERVAL_HOURS=24
MODEL_PREDICTION_BATCH_SIZE=100
MODEL_CACHE_TTL_MINUTES=60

# External APIs
WEATHER_API_KEY=your_weather_api_key
PORT_API_KEY=your_port_api_key

# Dashboard Configuration
DASHBOARD_AUTO_REFRESH_SECONDS=30
DASHBOARD_MAX_RECORDS=1000

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
